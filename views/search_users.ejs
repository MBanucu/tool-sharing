<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Search Users - Tool Sharing</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
  <link href="/css/styles.css" rel="stylesheet">
</head>

<body class="container mt-5">
  <%- include('partials/header') %>
  <h1>Search Users</h1>
  <form action="/search/users" method="GET" class="mb-4">
    <div class="input-group">
      <input type="text" name="query" class="form-control" placeholder="Search by email..." value="<%= query %>">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>
  <h2>Results</h2>
  <ul class="list-group">
    <% users.forEach(user => { %>
    <li class="list-group-item">
      <a href="/users/<%= user.id %>"><%= user.email %></a>
    </li>
    <% }); %>
  </ul>
</body>

</html>