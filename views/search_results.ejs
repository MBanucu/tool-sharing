<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Search Tools - Tool Sharing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
    <link href="/css/styles.css" rel="stylesheet">
</head>

<body class="container mt-5">
    <%- include('partials/header') %>
        <h1>Tool Sharing</h1>
        <form action="/search" method="GET" class="mb-4">
            <div class="input-group">
                <input type="text" name="query" class="form-control" placeholder="Search tools..." value="<%= query %>">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
        <% if (user) { %>
            <a href="/upload" class="btn btn-success mb-3">Upload New Tool</a>
            <% } %>
                <h2>Results</h2>
                <ul class="list-group">
                    <% tools.forEach(tool=> { %>
                        <li class="list-group-item">
                            <a href="/tool/<%= tool.id %>">
                                <%= tool.title %>
                            </a>
                            <p>
                                <%= tool.description ? tool.description.substring(0, 100) + '...' : 'No description' %>
                            </p>
                        </li>
                        <% }); %>
                </ul>
</body>

</html>